groups:
  - name: loki_rule_ms
    rules:
      - alert: MicrosampleGET_Metrics
        expr: count_over_time({juju_application="observed", juju_charm=~".*"} |= `GET` |= `/metrics` [1m]) > 0.5
        for: 3m
        labels:
          severity: page
        annotations:
          summary: Test loki rule for Microsample

